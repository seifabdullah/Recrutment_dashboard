@using Recrutement_plateforme.Models.OffresModels
@model Recrutement_plateforme.Models.OffresModels.Candidate

@{
    ViewData["Title"] = "Candidate Dashboard";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2 class="text-center">@ViewData["Title"]</h2>

            @if (ViewData["AllJobs"] != null)
            {
                <h3 class="mt-4">Available Jobs:</h3>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Company Name</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Competences Required</th>
                                <th>Responsibilities</th>
                                <th>Salary</th>
                                <th>Published At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var job in (List<Job>)ViewData["AllJobs"])
                            {
                                <tr>
                                    <td>@job.Recruteur.CompanyName</td>
                                    <td>@job.Title</td>
                                    <td>@job.Description</td>
                                    <td>@job.CompetencesRequired</td>
                                    <td>@job.Responsibilities</td>
                                    <td>@job.Salary</td>
                                    <td>@job.PublishedAt</td>
                                    <td>
                                        <a href="@Url.Action("ViewJob", "Candidates", new { jobId = job.Id })" class="btn btn-outline-success">View Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="mt-4">No jobs are currently available.</p>
            }

            <div class="mt-3 text-center">
                <a href="@Url.Action("Welcome", "Candidates")" class="btn btn-primary">Back to Dashboard</a>
            </div>
        </div>
    </div>
</div>
