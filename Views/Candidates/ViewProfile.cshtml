@model Recrutement_plateforme.Models.OffresModels.Candidate

@{
    ViewData["Title"] = "View Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">My Profile</h2>

                    <div class="row">
                        <!-- Candidate Attributes (Right Side) -->
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Last name:</dt>
                                <dd class="col-sm-8">@Model.Prenom</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone:</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>

                                <dt class="col-sm-4">LinkedIn:</dt>
                                <dd class="col-sm-8">@Model.LinkedInUrl</dd>
                            </dl>
                        </div>

                        <!-- Complete Profile Details (Left Side) -->
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Experience:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Experience</dd>

                                <dt class="col-sm-4">Education:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Education</dd>

                                <dt class="col-sm-4">Skills:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Skills</dd>

                                <dt class="col-sm-4">Competences:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Competencies</dd>

                                <dt class="col-sm-4">Languages:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Languages</dd>

                                <dt class="col-sm-4">Hobbies:</dt>
                                <dd class="col-sm-8">@Model.CompleteProfile?.Hobbies</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Welcome" class="btn btn-primary">Back to Dashboard</a>
                        <a asp-action="UpdateProfile" class="btn btn-success">Update Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
