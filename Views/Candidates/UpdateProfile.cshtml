@model Recrutement_plateforme.Models.OffresModels.Candidate

@{
    ViewData["Title"] = "Update Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Update Profile</h2>

                    <form asp-action="UpdateProfile" asp-controller="Candidates" method="post">
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group">
                            <label asp-for="Name">Name:</label>
                            <input asp-for="Name" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Prenom">Last Name:</label>
                            <input asp-for="Prenom" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control" />
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="ViewProfile" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
