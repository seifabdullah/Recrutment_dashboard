@{
    ViewData["Title"] = "Candidate Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card">
                <div class="card-body">

                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["Message"]
                        </div>
                    }

                    <form method="post" action="@Url.Action("Login", "Candidates")">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" id="email" name="email" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a href="@Url.Action("Register", "Candidates")">Create Candidate Account</a></p>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home Page</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
