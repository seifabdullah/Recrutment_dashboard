@{
    ViewData["Title"] = "Recruiters Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card">
                <div class="card-body">

                    <h2 class="card-title text-center">@ViewData["Title"]</h2>

                    <form method="post" action="@Url.Action("Login", "Recruteurs")">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="text" id="email" name="email" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="password" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a href="@Url.Action("Register", "Recruteurs")">Register here</a>.</p>
                    </div>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home Page</a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<!-- ... (previous code) -->

<script>
    function login() {
        // Get email and password
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;

        // Perform asynchronous login using AJAX
        $.ajax({
            url: '@Url.Action("Login", "Recruteurs")',
            type: 'POST',
            data: { email: email, password: password },
            success: function (result) {
                if (result.success) {
                    // Redirect to the welcome page if authentication is successful
                    window.location.href = '@Url.Action("Welcome", "Recruteurs")';
                } else {
                    // Show error message
                    var errorMessage = document.getElementById("errorMessage");
                    errorMessage.innerHTML = "Invalid email or password";
                    errorMessage.style.display = "block";
                }
            },
            error: function () {
                // Handle AJAX error
                console.log("An error occurred during login.");
            }
        });
    }
</script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

                    @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                    {
                        <div class="alert alert-info" role="alert">
                            @TempData["Message"]
                        </div>
                    }

                    <div id="errorMessage" class="alert alert-danger" role="alert" style="display: none;"></div>

         

                </div>
            </div>
</div>
