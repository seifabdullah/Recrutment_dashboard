@{
    ViewData["Title"] = "Welcome, Recruteur!";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">

            <h2 class="mb-4">@ViewData["Title"]</h2>

            <p class="lead">Welcome to the Recruteur Dashboard!</p>

         

            <div class="mt-4">
                <a href="@Url.Action("Index", "Jobs")" class="btn btn-success btn-lg mr-3">View Jobs</a>
                <a href="@Url.Action("Create", "Jobs")" class="btn btn-warning btn-lg mr-3">Post a Job</a>
                <a href="@Url.Action("ViewJobApplications", "Recruteurs")" class="btn btn-primary btn-lg mr-3">View Job Applications</a>
                <a href="@Url.Action("Logout", "Recruteurs")" class="btn btn-danger btn-lg">Logout</a>
            </div>

        </div>
    </div>
</div>
